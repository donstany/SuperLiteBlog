@model List<Blog.Models.Article>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-sm-6">
                <article>
                    <header>
                        <h2>
                            @if (User.Identity.IsAuthenticated && User.Identity.Name == article.Author.Email)
                            {
                                @Html.ActionLink(@article.Title, "Details", "Article", new { @id = article.Id }, null)

                            }
                            else
                            {
                                <strong>
                                    @article.Title
                                </strong>
                            }
                        </h2>
                    </header>
                    <p>
                        @article.Content
                    </p>
                    <footer class="pull-right">
                        <small class="author">
                            Author: @article.Author.FullName
                        </small>
                    </footer>
                </article>
            </div>
        }
    </div>
</div>
<hr />
